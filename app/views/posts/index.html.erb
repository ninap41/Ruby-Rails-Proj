

<!DOCTYPE html>
<html>
<head>
  <title>Threadly</title>
  <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Nanum+Gothic+Coding' %>
  <%= stylesheet_link_tag 'application', 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <style>


</style>
</head>
<body>
<div class="Container">
<h1 style="text-align: center">Thoughts Wall</h1>

<div class="container">

<div class="row" style="text-align: center">

    <%= form_for(@new_post) do |f| %>
     
        <div class="column col-xs-8 col-md-10" style="margin-left:8%;">
        <%= f.text_area :thought, :placeholder => "share your thoughts" %><BR>
            <%= f.text_field :name, :placeholder => "Name" %><BR>
            <%= f.text_field :image, :placeholder => "Image URL" %><BR>

            <%= f.submit :post, :class => "btn" %>

        </div>
    <% end %>

</div>

<span class="thoughts" id="thoughts">

   <% if (@posts.blank?) then %>
            <h4 style="text-align:center">there are no thoughts yet!</h4>
        <% end%>
    <% @posts.each do |p| %>
    
        <div class="thought" style="background-color: white; border-radius: 1rem;text-align: center; margin: 1rem; padding:1rem; margin-left: 33%;width: 30%">
    <div class="column1">
        <p style="margin-top: 20%;">"<%= link_to p.thought, p %>"</p>
        <p>Poster: <%= p.name %></p>
    </div>
    <div class="column1">
        <img style="height:100%;padding:1rem;" src="<%= p.image %>">
    </div>
    
        <p style="margin-top: 1rem;"><%= p.created_at.strftime("%a " + "| %Y-%m-%d " + "| at %I:%M%p") %></p>
     </div>
    <% end %>
</span>

</div>
</div>
</body>
</html>